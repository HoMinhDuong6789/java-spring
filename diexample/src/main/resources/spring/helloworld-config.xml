<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="helloWorldFactory"
		class="guru.springframework.services.HelloWorldFactory" />

	<bean id="french" factory-bean="helloWorldFactory"
		factory-method="createHelloWorldService">
		<constructor-arg value="fr" />
	</bean>

	<bean id="helloWorldServiceGerman"
		factory-bean="helloWorldFactory"
		factory-method="createHelloWorldService">
		<constructor-arg value="de" />
	</bean>

	<bean id="helloWorldServicePolishImpl"
		factory-bean="helloWorldFactory"
		factory-method="createHelloWorldService">
		<constructor-arg value="pl" />
	</bean>

	<bean id="helloWorldServiceRussianIml"
		factory-bean="helloWorldFactory"
		factory-method="createHelloWorldService">
		<constructor-arg value="ru" />
	</bean>

	<beans profile="english">
		<!-- <bean id="helloWorldServiceDefault"
			factory-bean="helloWorldFactory"
			factory-method="createHelloWorldService" primary="true">
			<constructor-arg value="en" />
		</bean> -->
		<import resource="classpath:spring/ennglish-hello-world"/>
	</beans>

	<beans profile="spanish">
		<bean id="helloWorldServiceDefault"
			factory-bean="helloWorldFactory"
			factory-method="createHelloWorldService" primary="true">
			<constructor-arg value="es" />
		</bean>
	</beans>
</beans>