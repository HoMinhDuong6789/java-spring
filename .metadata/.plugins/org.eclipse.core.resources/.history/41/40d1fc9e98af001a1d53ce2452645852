package ex01;

import java.util.Scanner;

public class Equation {
	private Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		long a = 0, b = 0;
		Equation demo = new Equation();
		demo.input(a, b);
		System.out.println(a+" "+b);
	}

	// input
	private void input(long a, long b) {
		System.out.println("Enter paramater a, b of ax + b =0");
		try {
			System.out.println("Enter paramater a");
			a = Long.parseLong(sc.next());
			System.out.println("Enter paramater b");
			b = Long.parseLong(sc.next());
		} catch (NumberFormatException e) {
			// TODO: handle exception
			e.printStackTrace();
		}

	}

	//

}
